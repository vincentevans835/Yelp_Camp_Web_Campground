<% layout('/layouts/boilerplate') %>
<div id="cluster-map"></div>
<div class="mb-3 d-flex justify-content-center">
    <h1>All Campgrounds</h1>
</div>

<div class="container campground-container">
    <% for (let i = 0; i < campgrounds.length; i += 3) { %>
    <div class="row" style="justify-content: center;">
        <% for (let j = i; j < i + 3 && j < campgrounds.length; j++) { %>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card shadow">
                    <% if (campgrounds[j].image.length) { %>
                    <img class="img-fluid" src="<%= campgrounds[j].image[0].url %>" alt="">
                    <% } else { %>
                    <img class="img-fluid"
                        src="https://res.cloudinary.com/dzadofsp3/image/upload/v1712203790/YelpCamp/y8y7wtpjyzpefghssycq.jpg"
                        alt="">
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campgrounds[j].title %>
                        </h5>
                        <p class="card-text">
                            <%= campgrounds[j].description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campgrounds[j].location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campgrounds[j]._id %>">View
                            <%= campgrounds[j].title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
    <% } %>
</div>
<script>
    const mapToken = '<%= process.env.MAPBOX_TOKEN %>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %> }
</script>
<script src="/javascripts/clusterMap.js"></script>
